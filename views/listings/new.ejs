<%- layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-2">
<br>

    <h3> create a new listing</h3>
    <form method = "POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"> 
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name ="listing[title]"
             placeholder="enter titile"
              type="text" 
              class="form-control"
             required/>
              <div class="valid-feedback"> tittle looks good</div>

        </div>
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea name ="listing[description]" placeholder="enter description" class="form-control" required></textarea>
            <div class="invalid-feedback"> please enter description</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image </label>
            <input name ="listing[image]"  type="file" class="form-control">
            <div class="invalid-feedback"> please enter image</div>
        </div>
    <div class="row">
        <div class="mb-3 col-4">
            <label for="price" class="form-label">Price</label>
            <input name ="listing[price]" placeholder="enter price" type="number" class="form-control" required />
            <div class="invalid-feedback"> please enter price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name ="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
            <div class="invalid-feedback"> please enter country</div>
        </div>
    </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name ="listing[location]" placeholder="enter location" type="text" class="form-control"required/>
            <div class="invalid-feedback"> please enter location</div>
            

        </div>
       
        <br>
        
        <button class="btn btn-dark">Add </button><br>
        <br><br>
        
        

    </form>
</div>
</div>