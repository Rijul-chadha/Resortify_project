<%- layout('layouts/boilerplate') %> 
<body>
    <style>
        /* General styles for filters */
        #filters {
            display: flex;
            justify-content: flex-start;
            gap: 20px;
            padding: 1rem;
            overflow-x: auto;
            white-space: nowrap;
            scrollbar-width: thin;
            margin: 0 auto;
            max-width: 90%; /* Add spacing based on screen size */
        }

        /* Responsive spacing for larger screens */
        @media (min-width: 1200px) {
            #filters {
                max-width: 80%; /* Adjust width for laptops and larger screens */
            }
        }

        /* Filter item styles */
        .filter {
            text-align: center;
            padding: 4px;
            flex: 0 0 auto;
            opacity: 0.8;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
            margin: 0;
        }

        /* Custom scrollbar styles */
        #filters::-webkit-scrollbar {
            height: 8px;
        }
        #filters::-webkit-scrollbar-thumb {
            background-color: #ccc;
            border-radius: 4px;
        }
        #filters::-webkit-scrollbar-track {
            background-color: #f1f1f1;
        }

        /* Navbar styles */
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background-color: #f8f9fa;
            flex-wrap: wrap; /* Allow wrapping on smaller screens */
        }

        nav a {
            text-decoration: none;
            color: #333;
            font-size: 1rem;
            margin: 0 0.5rem;
        }

        nav a:hover {
            text-decoration: underline;
        }

        /* Make navbar responsive */
        @media (max-width: 768px) {
            nav a {
                font-size: 0.9rem; /* Reduce font size on smaller screens */
            }

            nav {
                justify-content: center; /* Center align for better spacing */
            }
        }

        /* Listings section */
        .listing-link {
            text-decoration: none;
            color: inherit;
        }

        .listing-card {
            margin-bottom: 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
        }

        .card-img-top {
            width: 100%;
            object-fit: cover;
        }

        .card-body {
            padding: 1rem;
        }

        .card-text {
            font-size: 1rem;
            margin: 0;
        }
    </style>

    <!-- Navbar Section -->
    <nav>
        <a href="/">Home</a>
        <a href="/listings">Listings</a>
        <a href="/contact">Contact</a>
        <a href="/about">About</a>
    </nav>

    <!-- Filters Section -->
    <div id="filters">
        <div class="filter">
            <div> <i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-bed"></i> </div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-mountain-city"></i> </div>
            <p>Iconic cities</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-mountain-sun"></i> </div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div> <i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-water-ladder"></i> </div>
            <p>Amazing pools</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-campground"></i> </div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-tractor"></i> </div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-igloo"></i> </div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div> <i class="fa-solid fa-ship"></i> </div>
            <p>Boats</p>
        </div>
    </div>

    <!-- Listings Section -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b>
                            &dollar;<%= listing.price %> / night
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>
